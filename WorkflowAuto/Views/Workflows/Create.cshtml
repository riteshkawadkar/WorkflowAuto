@model WorkflowAuto.Data.Workflow

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Workflow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkflowType" class="control-label"></label>
                <select asp-for="WorkflowType" class="form-control"></select>
                <span asp-validation-for="WorkflowType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationId" class="control-label"></label>
                <select asp-for="ApplicationId" class ="form-control" asp-items="ViewBag.ApplicationId"></select>

            </div>
            <div class="form-group">
                <label asp-for="AssociatedRoles" class="control-label"></label>
                <select asp-for="@Model.AssociatedRoles" asp-items="Html.GetEnumSelectList<AssociatedRoles>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryRole" class="control-label"></label>
                <select asp-for="@Model.DeliveryRole" asp-items="Html.GetEnumSelectList<AssociatedRoles>()" class="form-control"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
