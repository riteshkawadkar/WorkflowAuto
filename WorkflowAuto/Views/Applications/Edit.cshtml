@model ApplicationVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">                    
                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Version" class="control-label"></label>
                    <input asp-for="Version" class="form-control" />
                    <span asp-validation-for="Version" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Manufacturer" class="control-label"></label>
                    <input asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
            </div>
            <div class="row"><br/></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="ConnectedToInstrumnet" class="control-label"></label>
                    <select asp-for="@Model.ConnectedToInstrumnet" asp-items="Html.GetEnumSelectList<ConnectedTo>()" class="form-control"></select>
                    <span asp-validation-for="ConnectedToInstrumnet" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ConnectedToEquipment" class="control-label"></label>
                    <select asp-for="@Model.ConnectedToEquipment" asp-items="Html.GetEnumSelectList<ConnectedTo>()" class="form-control"></select>
                    <span asp-validation-for="ConnectedToEquipment" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ConnectedToComputer" class="control-label"></label>
                    <select asp-for="@Model.ConnectedToComputer" asp-items="Html.GetEnumSelectList<ConnectedTo>()" class="form-control"></select>
                    <span asp-validation-for="ConnectedToComputer" class="text-danger"></span>
                </div>                
            </div>
            <div class="row"><br/></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="ConnectedToServer" class="control-label"></label>
                    <select asp-for="@Model.ConnectedToServer" asp-items="Html.GetEnumSelectList<ConnectedTo>()" class="form-control"></select>
                    <span asp-validation-for="ConnectedToServer" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ServerName" class="control-label"></label>
                    <input asp-for="ServerName" class="form-control" />
                    <span asp-validation-for="ServerName" class="text-danger"></span>
                </div>
            </div>
            <div class="row"><br/></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="FileSystem" class="control-label"></label>
                    <select asp-for="@Model.FileSystem" asp-items="Html.GetEnumSelectList<FileSystem>()" class="form-control"></select>
                    <span asp-validation-for="FileSystem" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CSVStatus" class="control-label"></label>
                    <select asp-for="@Model.CSVStatus" asp-items="Html.GetEnumSelectList<CSVGXPStatus>()" class="form-control"></select>
                    <span asp-validation-for="CSVStatus" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CSVCompletedOn" class="control-label"></label>
                    <input asp-for="CSVCompletedOn" class="form-control" />
                    <span asp-validation-for="CSVCompletedOn" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="GXPStatus" class="control-label"></label>
                    <select asp-for="@Model.GXPStatus" asp-items="Html.GetEnumSelectList<CSVGXPStatus>()" class="form-control"></select>
                    <span asp-validation-for="GXPStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="row"><br/></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="BackupMode" class="control-label"></label>
                    <select asp-for="@Model.BackupMode" asp-items="Html.GetEnumSelectList<BackupMode>()" class="form-control"></select>
                    <span asp-validation-for="BackupMode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Priviledges" class="control-label"></label>
                    <select asp-for="@Model.Priviledges" asp-items="Html.GetEnumSelectList<Priviledges>()" class="form-control"></select>
                    <span asp-validation-for="Priviledges" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="GAMPCategory" class="control-label"></label>
                    <select asp-for="@Model.GAMPCategory" asp-items="Html.GetEnumSelectList<GAMPCategory>()" class="form-control"></select>
                    <span asp-validation-for="GAMPCategory" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="VendorDetails" class="control-label"></label>
                    <input asp-for="VendorDetails" class="form-control" />
                    <span asp-validation-for="VendorDetails" class="text-danger"></span>
                </div>
            </div>
            <div class="row"><br/></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="Id" />


            <div class="row"><br/></div>
            <div class="row">
                <div class="form-group col-md-3">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
                <div class="form-group col-md-3">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <div class="row"><br/></div>

            
        </form>
 
</div>



